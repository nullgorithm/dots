# MPlayer

# Video output
vo=xv

# Init once for multiple inputs, has many advantages
fixed-vo=1

# Start in fullscreen mode by default.
fs=no

# Audio output
ao=alsa
channels=2
mixer-channel="PCM"
aid=1

# Software scaling
zoom=1

# Ajust volume differences.
#a52drc=1
#af=volnorm

# Aspect ratio
monitoraspect="16:9"

# No no output
really-quiet=0

# Buffer cache
nocache=0

# Double buffering [ TribleBuffering enabled on driver ]
double=yes

# Frame dropping
framedrop=0
hardframedrop=0

# Normal subs
font="Blue Highway"
ffactor=1 # Black outline
subfont-text-scale=2.0 # Font scale
subpos="70" # Raise subs
spuaa=4 # Antialias
unicode=yes
utf8=yes

# Post-processing
autoq=100

# Disable lirc
nolirc=yes

# Do not handle FS atoms
#fstype=none

# Other
idx=yes
stop-xscreensaver=yes
ass=no
embeddedfonts=1
msgcolor=1
msgmodule=1
nojoystick=1

