#!/bin/sh

# Sizes
bar_height="14"
bar_width="1366" # monitor total width value here
resolution_width="$(( $bar_width / 2 ))"
resolution_height="768"

# Font
font="PragmataPro"
font_size="7"

# Color definitions
color_bg="#151515"
color_fg="#ddd"

# Sources
conky_right="/home/samus/junk/conky_right"
conky_left="/home/samus/junk/conky_left"

# Spawn the bar
dzen_cmd="dzen2 -fn $font-$font_size -h $bar_height -bg $color_bg -fg $color_fg -y $resolution_height"

conky -c $conky_right | $dzen_cmd -x $resolution_width -ta r &
conky -c $conky_left | $dzen_cmd -w $resolution_width -ta l
