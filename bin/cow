#!/usr/bin/env zsh

cd $HOME/compile && cower --download "$1"
builddir="$_"
cd "${builddir}" && ${EDITOR:-nano} PKGBUILD
makepkg -sic && cd - &>/dev/null

print "Remove build directory? [Y/n]"
read "$yn"
if [[ "$yn" = "y" ]] {
  print "Removing build directory..."
  rm -rf "$builddir"
} else {
  print "Build completed."
}
