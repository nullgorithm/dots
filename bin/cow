#!/usr/bin/env sh

cd $HOME/junk/compilation && cower -d "$1"
builddir="$_"
cd "$builddir" && ${EDITOR:-vim} PKGBUILD
makepkg -sic && cd - &>/dev/null

    read -p "Remove Build directory? [Y/n]? " yn
    if [ "$yn" = "y" ]; then
        printf "\n%s\n" "Removing build directory..."
        rm -rf "$builddir"
    else
        printf "%s\n" "Build completed."
    fi
