" Keybindings
let mapleader = ";"

noremap d :tabclose!<CR>
noremap K :tabprevious<CR>
noremap J :tabnext<CR>
noremap <C-t> :tabnew<CR>
noremap <C-w> <Esc>
noremap <C-q> :quit!
noremap j 7j
noremap k 7k
noremap h 7h
noremap l 7l
noremap y Y
noremap Y y