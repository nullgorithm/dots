" Support paging through a document.
javascript <<EOF
  mappings.addUserMap(
    [modes.NORMAL],
    ["}"],
    "Smooth scroll some down",
    function(count){
      // 1600 is 80 (the normal scroll amount) * 20, a rough number I found to
      // work.
      self.smoothScrollBy(1600 * (count || 1));
    },
    {
      count: true
    }
  );
  mappings.addUserMap(
    [modes.NORMAL],
    ["{"],
    "Smooth scroll some down",
    function(count){
      // 1600 is 80 (the normal scroll amount) * 20, a rough number I found to
      // work. Negative means go up.
      self.smoothScrollBy(-1600 * (count || 1));
    },
    {
      count: true
    }
  );
EOF

" vim: ft=vimperator
