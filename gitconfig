## Aliases ##

[alias]
  comet = commit --amend -C HEAD
  tree = log --abbrev-commit --date=short --pretty=oneline --decorate --color=always
  st = status --short
  whathaveidone = diff HEAD
  add = add --verbose
  mv = mv --verbose

