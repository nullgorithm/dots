#!/bin/sh

# X stuff
xset m 0 0
xset r rate 200 50
setxkbmap br
setxkbmap -option terminate:ctrl_alt_bksp
xsetroot -cursor_name left_ptr
xrdb -load $HOME/.Xresources

# Wallpaper
# nitrogen --restore &
xsetroot -solid "#5C6F69" &

# Hide mouse
unclutter -noevents -root -idle 1 &

# Desktop compositing
compton &

# Daemons
thunar --daemon &
urxvtd -q -o -f &

# Panels
tint2 &
dzenstatus &

# WM
# exec herbstluftwm
exec openbox